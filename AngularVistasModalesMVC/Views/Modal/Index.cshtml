
@{
    ViewBag.Title = "Index";
}

<h2>Ejemplo de modal</h2>


<div ng-app="modulo">
    <div ng-controller="ModalController">
        <script type="text/ng-template" id="mdangular">
            <div class="modal-header">
                <h3 class="modal-title">Modal</h3>
            </div>
            <div class="modal-body">
                <p><b>Ejemplo con una vista con template de angular</b></p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-default btn-sm" ng-click="cancel()">Cancelar</button>
            </div>
        </script>

        <button class="btn btn-default btn-sm" ng-click="Vista_template()">Llamar a template</button>
        <button class="btn btn-default btn-sm" ng-click="Vista_Parcial()">Llamar a parcial</button>
        
        
    </div>
</div>

@section scripts {

    <script src="~/Scripts/app/app.js"></script>
    <script src="~/Scripts/app/Controladores/ModalController.js"></script>

}